{
  "name": "yguedidi/tvjussieu",
  "type": "project",
  "license": "proprietary",
  "description": "TV Jussieu",
  "homepage": "http://tvjussieu.com",
  "authors": [
    {
      "name": "Yassine Guedidi",
      "email": "yassine@guedidi.com",
      "homepage": "https://github.com/yguedidi"
    }
  ],
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Roots\\Bedrock\\Installer": "scripts"}
  },
  "scripts": {
    "post-root-package-install": ["Roots\\Bedrock\\Installer::addSalts"]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "version": "4.0",
        "type": "webroot",
        "dist": {
          "type": "zip",
          "url": "https://fr.wordpress.org/wordpress-4.0-fr_FR.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.3.2",
    "wordpress/wordpress": "4.0",
    "fancyguy/webroot-installer": "1.1.0",
    "composer/installers": "v1.0.12",
    "vlucas/phpdotenv": "~1.0.6",

    "wpackagist-theme/twentyfourteen": "~1.2",

    "wpackagist-plugin/contact-form-7": "~4.0",
    "wpackagist-plugin/facebook": "~1.5",
    "wpackagist-plugin/fourteen-colors": "~1.2",
    "wpackagist-plugin/regenerate-thumbnails": "~2.2"
  },
  "require-dev": {
    "wpackagist-plugin/debug-bar": "~0.8",
    "wpackagist-plugin/debug-bar-console": "~0.3",
    "wpackagist-plugin/debug-bar-cron": "~0.1",
    "wpackagist-plugin/debug-bar-extender": "~0.5",
    "wpackagist-plugin/developer": "~1.2",
    "wpackagist-plugin/log-deprecated-notices": "~0.3",
    "wpackagist-plugin/log-viewer": "~14.05",
    "wpackagist-plugin/rewrite-rules-inspector": "~1.2",
    "wpackagist-plugin/theme-check": "~20140929",
    "wpackagist-plugin/wordpress-reset": "~1.3"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "wpackagist-plugin/facebook", "wpackagist-plugin/fourteen-colors"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "webroot-dir": "web/wp",
    "webroot-package": "wordpress/wordpress"
  }
}
